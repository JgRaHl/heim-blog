!!!
%html
  %head
    -# The charset will be specified by the server. If we run into trouble,
    -# re-enable this
    -#%meta{charset: "utf-8"}
    %meta{name: "google-site-verification", content: "28-lYqSr1WEv-aL192qtW_aCtjl0we9L2zGcvPpvGPY"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag "main"
    - if data.page.title
      %title #{data.page.title} - Projekt Heim
    - else
      %title Burkhard Heims Einheitliche Quantenfeldtheorie
    - if data.page.description
      %meta{name: "description", content: data.page.description}
    = javascript_include_tag "visitors.js"
    = javascript_include_tag "http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"
    %script{:type => "text/x-mathjax-config"}
      MathJax.Hub.Config({tex2jax:{inlineMath:[['$','$'],['$$','$$']]},"HTML-CSS":{linebreaks:{automatic:true}}});
  %body
    #header
      .container
        #logo
          %a{href: "/"}
            = image_tag "iblue.png", :height => "48", :width => "46"
            %h1 iblue
        #topnav
          %h1 heim projekt
    #main.container= yield
